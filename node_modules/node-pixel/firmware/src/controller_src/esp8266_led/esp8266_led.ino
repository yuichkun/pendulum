// firmware used to allow node-pixel to run using ESP8266 as the target.

#include "ws2812.h"

#define MAX_STRIPS 1
#define NUM_PIXELS 17
#define DEBUG true
#define serialport Serial

void setup() {

    Serial.begin(115200);
    Serial.println("\n\n\n\nNode Pixel ESP8266 Endpoint");

    ws2812_initialise();
    Serial.println("Initialised");
    initialise_pixels(NUM_PIXELS);
    ws2812_init(NUM_PIXELS);

    setColorOrderGRB();
    set_rgb_at(1, 0x80FF00);
    print_pixels();
	Serial.println("About to show");
	ws2812_show();
